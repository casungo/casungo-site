---
import { getRelativeLocaleUrl } from "astro:i18n";

const { brand, home, translate } = Astro.props;

const currentPathname = Astro.url.pathname;

// const itHow = getRelativeLocaleUrl("it", "how");
// const enHow = getRelativeLocaleUrl("en", "how");

const itContact = getRelativeLocaleUrl("it", "contact");
const enContact = getRelativeLocaleUrl("en", "contact");

const itVersion = currentPathname.replace(/\/en(?:\/|$)/, "/");
const enVersion = currentPathname.startsWith("/en") ? currentPathname : `/en${currentPathname}`;
---

<nav class="navbar navbar-expand-md bg-body-secondary rounded my-3">
  <div class="container-fluid">
    <a class="navbar-brand me-2" href="../">{brand}</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse d-md-flex" id="navbar">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="../"><i class="bi bi-house"></i> {home}</a>
        </li>
        <!--<li class="nav-item">
          <a class="nav-link" href={Astro.currentLocale == "en" ? enHow : itHow}><i class="bi bi-tools"></i> {Astro.currentLocale == "en" ? "How this site works" : "Come funziona questo sito"}</a>
        </li> -->
        <li class="nav-item">
          <a class="nav-link" href={Astro.currentLocale == "en" ? enContact : itContact}><i class="bi bi-envelope"></i> {Astro.currentLocale == "en" ? "Contact me" : "Contattami"}</a>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown"><i class="bi bi-translate"></i> {translate}</a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href={itVersion}> Italiano</a></li>
            <li><a class="dropdown-item" href={enVersion}> English</a></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>
